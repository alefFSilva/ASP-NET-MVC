
   <table>
       <thead>
           <tr>
               <td>CategoriaID</td>
               <td>Nome</td>
               <td>Descricao</td>
           </tr>
       </thead>
       <tbody>
           
           @foreach(var categoria in ViewBag.categorias)
           {
               <tr>
                   <td>@categoria.Id</td>
                   <td>@categoria.Nome</td>
                   <td>@categoria.Descricao</td>
               </tr>

           }

       </tbody>
   </table>
